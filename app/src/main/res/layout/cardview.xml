<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="554dp">

    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_gravity="start|top"
        android:contentDescription="@string/event_card_image_description"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/cardName"
        style="@style/AppTheme"
        android:layout_width="376dp"
        android:layout_height="48dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="272dp"
        android:text="Название события"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/cardDate"
        android:layout_width="160dp"
        android:layout_height="18dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="388dp"
        android:text="31 сентября 1970"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cardDuration"
        android:layout_width="123dp"
        android:layout_height="18dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="422dp"
        android:text="2 часа"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cardCountVisitorsText"
        android:layout_width="48dp"
        android:layout_height="18dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="456dp"
        android:text="@string/event_card_count_visitors_text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cardCountVisitors"
        android:layout_width="128dp"
        android:layout_height="18dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="64dp"
        android:layout_marginTop="456dp"
        android:text="1000 человек"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cardTime"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginStart="184dp"
        android:layout_marginTop="388dp"
        android:text="00:00"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cardPlace"
        android:layout_width="376dp"
        android:layout_height="36dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="336dp"
        android:text="Место"
        android:textSize="18sp" />

    <ToggleButton
        android:id="@+id/cardParticipation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom|fill_horizontal"
        android:background="@color/inno_green"
        android:textColor="@color/background1"
        android:textColorHint="@color/amount"
        android:textOff="@string/event_card_participation_off"
        android:textOn="@string/event_card_participation_on"
        android:textSize="18sp" />

</androidx.cardview.widget.CardView>