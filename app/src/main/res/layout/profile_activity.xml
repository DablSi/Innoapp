<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:src="@drawable/back"
            tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/txt_profile_title"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp"
            tools:ignore="RelativeOverlap,SpUsage" />


        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/profile_image2"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/mailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:text="@string/txt_maps_email"
            android:textColor="@android:color/background_dark"
            android:textSize="25dp"
            tools:ignore="RelativeOverlap,SpUsage" />

        <TextView
            android:id="@+id/avaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:text="@string/txt_icon_a_profile"
            android:textColor="@android:color/background_light"
            android:textSize="45dp"
            tools:ignore="RelativeOverlap,SpUsage" />

        <ImageView
            android:id="@+id/instaImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            app:srcCompat="@drawable/profile_image4"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/faceBookImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="220dp"
            android:layout_marginRight="20dp"
            android:layout_toStartOf="@+id/instaImageView"
            app:srcCompat="@drawable/profile_image3"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <ImageView
            android:id="@+id/VKImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="220dp"
            android:layout_toEndOf="@+id/instaImageView"
            app:srcCompat="@drawable/profile_image5"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:id="@+id/languageLayout"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="325dp"
            android:background="#F1F2F7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/languageImage"
                android:text="@string/txt_profile_language"
                android:textColor="@android:color/background_dark"
                android:textSize="16dp"
                tools:ignore="SpUsage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="240dp"
                android:layout_toEndOf="@+id/languageImage"
                android:text="@string/txt_profile_language_value"
                android:id="@+id/txt_lang"
                android:textColor="@android:color/background_dark"
                android:textSize="16dp"
                android:clickable="true"
                android:focusable="true"
                tools:ignore="SpUsage" />

            <ImageView
                android:id="@+id/languageImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/profile_image6"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/languageImage"
                android:text="@string/txt_profile_language"
                android:textColor="@android:color/background_dark"
                android:textSize="16dp"
                tools:ignore="SpUsage" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/darkThemeLayout"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="370dp"
            android:background="#F1F2F7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/darkThemeImage"
                android:text="@string/txt_theme"
                android:textColor="@android:color/background_dark"
                android:textSize="16dp"
                tools:ignore="SpUsage" />

            <ImageView
                android:id="@+id/darkThemeImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/profile_image7"
                tools:ignore="ContentDescription" />


            <Switch
                android:id="@+id/switch1"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="220dp"
                android:layout_toEndOf="@+id/darkThemeImage"
                android:checked="false"
                android:textOff="@string/txt_theme_value"
                android:textOn="@string/txt_theme_value_on"
                android:theme="@style/SwitchTheme" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/notificationsLayout"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="415dp"
            android:background="#F1F2F7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/notificationsImage"
                android:text="@string/txt_profile_notify"
                android:textColor="@android:color/background_dark"
                android:textSize="16dp"
                tools:ignore="SpUsage" />

            <ImageView
                android:id="@+id/notificationsImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/profile_image8"
                tools:ignore="ContentDescription" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="220dp"
                android:layout_toEndOf="@+id/notificationsImage"
                android:checked="false"
                android:textOff="@string/txt_notif_off"
                android:textOn="@string/txt_notif_on"
                android:theme="@style/SwitchTheme" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/logOutLayout"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="480dp"
            android:background="#F1F2F7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/logOutImage"
                android:text="@string/txt_logout"
                android:textColor="@android:color/background_dark"
                android:textSize="16dp"
                tools:ignore="RtlHardcoded,SpUsage" />

            <ImageView
                android:id="@+id/logOutImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/profile_image9"
                tools:ignore="ContentDescription,RtlHardcoded" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="4"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/lower_image"
        tools:ignore="ContentDescription,ObsoleteLayoutParam" />


</LinearLayout>
